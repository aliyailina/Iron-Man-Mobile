<?xml version="1.0" encoding="utf-8"?>
<TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/script">
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:id="@+id/script_background"
                  android:background="@drawable/delete_background_rect"
                  android:layout_width="346dp"
                  android:layout_height="49dp"
                  android:layout_marginBottom="2dp"
                  android:layout_marginStart="3dp">
            <Button 
                    android:id="@+id/deleteBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="230dp"
                android:layout_marginRight="45dp"
                android:text="Delete"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                style="@android:style/Widget.Holo.Button.Borderless"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:tools="http://schemas.android.com/tools"
                  android:id="@+id/script_foreground"
                  android:background="@null"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
            <TextView
                    android:text="TextView"
                    android:layout_width="287dp"
                    android:layout_height="49dp"
                    android:id="@+id/textView5"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="3dp"
                    android:paddingStart="29dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/script_background"/>
                <ImageButton
                        android:id="@+id/plus_btn"
                        android:layout_width="59dp"
                        android:layout_height="49dp"
                        android:background="@drawable/script_indicator"
                        android:src="@drawable/plus_btn"
                        android:padding="10dp"
                        android:layout_gravity="end"/>
        </LinearLayout>
    </FrameLayout>
</TableRow>