<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:minHeight="25px"
        android:minWidth="25px"
        android:weightSum="8">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Please enter IP address"
              android:textColor="#164DA7"
              android:layout_marginTop="10dp"
              android:layout_marginStart="5dp"
              android:textSize="20sp"/>
    
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ip_background"
            android:layout_marginTop="10dp"
            android:layout_margin="5dp"
            android:weightSum="20">
        
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/edIPaddress"
                android:textCursorDrawable="@null"
                android:background="@drawable/edit_ip_cursor"
                android:digits="0123456789."
                android:textColor="@android:color/black"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="19"
                android:inputType="text"
                android:imeOptions="actionDone"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/connect"
                android:text="Connect"
                android:background="@drawable/connect_background"
                android:layout_weight="1"
                android:textSize="13sp"
                android:typeface="sans"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/linearLayout2"
            android:background="@drawable/ip_background">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textYourText"
                android:textColor="@android:color/black"
                android:layout_margin="5dp"
                android:typeface="normal"
                android:textSize="18sp"
                android:inputType="text"
                android:imeOptions="actionDone"/>
    </LinearLayout>

   
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="66.34dp">
    <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="58.3dp"
            android:background="@drawable/buttons_bar"
            android:id="@+id/linearLayout3"
            android:layout_alignParentBottom="true"
            android:weightSum="2">

        <Button
                fontPath="fonts/squares_bold.ttf"
                android:text="EDIT"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnEdit"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_marginStart="39dp"
                android:gravity="bottom"/>
        
        <Button
                fontPath="fonts/squares_bold.ttf"
                android:text="SAVE"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_script"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:layout_gravity="center"
                android:layout_marginEnd="39dp"
                android:gravity="end|bottom"/>
    </LinearLayout>

        <Button
                android:layout_width="56.67dp"
                android:layout_height="56.67dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/circle_button"
                android:id="@+id/btnRecord"
                android:contentDescription="Record button with micro"/>
    </RelativeLayout>
</LinearLayout>

